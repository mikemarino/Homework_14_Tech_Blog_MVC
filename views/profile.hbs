<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{first_name}}!</h2>
  </div>
   <div class="col-md-2">
        <a href="/create"><button class="btn btn-sm btn-primary" id="" >CREATE POST</button></a>
      </div>
</div>

<div class="row mt-4">
  {{#if posts.length}}
  <div class="col-md-12 post-list">
    <h3>Current posts:</h3>
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-2">
        <a href="/update/{{post.id}}"><button class="btn btn-sm btn-primary" data-update="{{post.id}}">UPDATE</button></a>
      </div>
      <div class="col-md-2">
        <button class="btn btn-sm btn-danger " data-delete="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

  {{#if logged_in}}
    <script src="./js/post.js"></script>
  {{/if}}
