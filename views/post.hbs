<div class="">
  <h2>{{title}}</h2>
   <p>By: {{user.first_name}} {{user.last_name}} | {{format_date created_at}} | {{post_comments.length}} COMMENTS </p>
       <br />
      <p>{{{summary}}}</p>
  <p>{{{content}}}</p>
</div>
<br />
 

<h3>Comments: ({{post_comments.length}})</h3>
<div>
{{#each post_comments as |post_comment| }}
<div class="row mb-3 post">
  <div class="col-sm-3 col-md-3 col-lg-3">

    <p><span class="material-icons md-48">account_circle</span> {{user.first_name}} {{user.last_name}}</p>
    <p>Posted: {{format_date post_comment.created_at}}</p>
    </div>
    <div class="col-sm-9 col-md-9 col-lg-9">
    
    <p>{{{content}}}</p>
    
    </div>
</div>
{{/each}}
</div>

<div class="">

<h3>Leave a Comment:</h3>
<form class="form new-comment-form">
      <div class="form-group">
        <input placeholder="Write Comment Here" class="form-input" type="text" id="comment-text" name="comment-text" />
      </div>   
      <div class="form-group ">
        <button class="btn btn-primary " type="submit" data-commentid="{{id}}">Submit Comment</button>
      </div>
</form> 
</div>

<!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/comment.js"></script>
  {{/if}}